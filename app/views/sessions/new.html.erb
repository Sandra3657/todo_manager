<article class="new-users__main">
  <p class="new-users__title"> Sign-in!</p>

  <section class="new-users">
    <%= form_with url: sessions_path do |form|%>
      <div class="new-users__section">
        <p class="new-users__label">Email: </p>
        <%= form.email_field :email, class:"new-users__input"%>
      </div>
      <div class="new-users__section">
        <p class="new-users__label">Password: </p>
        <%= form.password_field :password, class:"new-users__input"%>
      </div>
      <div class="new-users__section">
        <%= form.submit "Sign-in!", class:"new-users__submit"%>
      </div>
    <% end %>
  </section>
</article>
