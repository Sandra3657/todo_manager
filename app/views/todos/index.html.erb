<article class="todo-main">
  <h1 class="todo-main__title">My To-do list</h1>
  <form class="add-todo" action="/todos" method="POST">
    <input type="text" class="add-todo__input" name="todo_text" placeholder="What's next? ">
    <input type="date" class="add-todo__date" name="due_date">
    <input class="add-todo__button" type="submit" value="Add">
  </form>

  <%=render partial: "todo-section", locals: {
    section_title: "Overdue",
    todos: Todo.overdue,
    show_due_date: true,
    overdue: true} %>

  <%=render partial: "todo-section", locals: {
    section_title: "Due Today",
    todos: Todo.due_today,
    show_due_date: false,
    overdue: false} %>

  <%=render partial: "todo-section", locals: {
    section_title: "Due Later",
    todos: Todo.due_later,
    show_due_date: true,
    overdue: false} %>
</article>
